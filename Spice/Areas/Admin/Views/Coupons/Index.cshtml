@model IEnumerable<Coupons>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class=" col-6">
            <h2 class="text-info">Coupons List</h2>
        </div>
        <div class="col-6" style="text-align:right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class=" table table-striped border">
                <tr>
                    <th style="padding-left:30px">
                        @Html.DisplayNameFor(m=>m.Name)
                    </th>
                    <th style="padding-left:30px">
                        @Html.DisplayNameFor(m=>m.Discount)

                    </th>
                    <th style="padding-left:30px">
                        @Html.DisplayNameFor(m=>m.MinimumAmount)
                    </th>
                    <th style="padding-left:30px">
                        @Html.DisplayNameFor(m=>m.IsActive)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="padding-left:30px;">
                            @Html.DisplayFor(m=>item.Name)
                        </td>
                        <td style="padding-left:30px;">
                            @Html.DisplayFor(m=>item.Discount)
                        </td>
                        <td style="padding-left:30px;">
                            @Html.DisplayFor(m=>item.MinimumAmount)
                        </td>
                        <td style="padding-left:30px;">
                            @Html.DisplayFor(m=>item.IsActive)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>

                    </tr>
                }
            </table>
        }
        else
        {
            <p style="text-align:center; color:black; font-size:25px;">No Coupons Available....</p>
        }
    </div>
</div>


