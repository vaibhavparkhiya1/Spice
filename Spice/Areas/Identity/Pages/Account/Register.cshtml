@page
@using Spice.Utility;

@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<br />
<h2 class="text-info">Create A New Account</h2>
<br />

<form method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Name" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Input.Name" class="text-danger" style="padding-left:195px;"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Email" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Input.Email" class="text-danger" style="padding-left:195px;"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Phonenumber" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Phonenumber" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Input.Phonenumber" class="text-danger" style="padding-left:195px;"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.StreetAddress" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.StreetAddress" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Input.StreetAddress" class="text-danger" style="padding-left:195px;"></span>
        </div> <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.City" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.City" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Input.City" class="text-danger" style="padding-left:195px;"></span>
        </div> <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.State" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.State" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Input.State" class="text-danger" style="padding-left:195px;"></span>
        </div> <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.PostalCode" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.PostalCode" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Input.PostalCode" class="text-danger" style="padding-left:195px;"></span>
        </div> <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Password" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Input.Password" class="text-danger" style="padding-left:195px;"></span>
        </div> <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <br />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="padding-left:195px;"></span>
        </div> <br />
        @if(User.IsInRole(SD.ManagerUser))
        {
            <div class="form-group row">
               <div class="col-2">
       
               </div>
               <div class="col-5 offset-1">
                 <input type="radio" name="userRole" value="@SD.KitchenUser" checked/> @SD.KitchenUser
                 <input type="radio" name="userRole" value="@SD.FrontDeskUser" checked /> @SD.FrontDeskUser
                 <input type="radio" name="userRole" value="@SD.ManagerUser" checked /> @SD.ManagerUser
               </div>
            </div> 
            
        }
        <br />
        <div class="form-group row">
            <div class="col-5 offset-2">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </div>
        </div>
        
        
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

